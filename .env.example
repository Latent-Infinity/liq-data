# OANDA Configuration (required for forex data)
OANDA_API_KEY=your_api_key_here
OANDA_ACCOUNT_ID=your_account_id
OANDA_ENVIRONMENT=practice  # or 'live'

# Binance Configuration (optional - public API needs no auth for market data)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_USE_US=false  # Set to true to use Binance.US instead of Binance.com

# TradeStation OAuth2 (required for TradeStation provider)
TRADESTATION_CLIENT_ID=your_client_id
TRADESTATION_CLIENT_SECRET=your_client_secret
TRADESTATION_REFRESH_TOKEN=your_refresh_token
TRADESTATION_REDIRECT_URI=http://localhost:8080
TRADESTATION_SCOPES="openid profile offline_access MarketData ReadAccount Trade"
TRADESTATION_PERSIST_REFRESH_TOKEN=true

# Coinbase Exchange
COINBASE_API_KEY=your_api_key_here
COINBASE_API_SECRET=your_api_secret_here
COINBASE_PASSPHRASE=your_passphrase_here

# Polygon
POLYGON_API_KEY=your_api_key_here

# Alpaca
ALPACA_API_KEY=your_api_key_here
ALPACA_API_SECRET=your_api_secret_here

# Storage Configuration
DATA_ROOT=./data

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # or 'console' for human-readable
LOG_FILE=./logs/financial_data.log
